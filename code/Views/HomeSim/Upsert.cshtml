@model WebApplication1.Models.ViewModels.HomeSimVM

@{ 
    var title = "Create Home";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Home.HomeID!= 0)
    {
        title = "Edit Home";
<input asp-for="Home.HomeID" hidden />
                }
    
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Home.Rooms"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Home.Rooms" class="form-control" />
                        <span asp-validation-for="Home.Rooms" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Home.Bathrooms"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Home.Bathrooms" class="form-control" />
                        <span asp-validation-for="Home.Bathrooms" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Home.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Home.Description" class="form-control" />
                        <span asp-validation-for="Home.Description" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Home.NeighborhoodID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Home.NeighborhoodID" asp-items="@Model.NeighborhoodSelectList" class="form-control">
                            <option disabled selected>--Select Neighborhood--</option>
                        </select>
                        <span asp-validation-for="Home.NeighborhoodID" class="text-danger"></span>
                    </div>

                

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Home.HomeID != 0)
                            {//Update
                <input type="submit" class="btn btn-info w-100" value="Update" /> }
            else
            {//Create
            <input type="submit" onclick="return validateinput()" class="btn btn-info w-100" value="Create" />}
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }

}