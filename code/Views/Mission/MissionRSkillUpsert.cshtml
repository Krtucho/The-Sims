@model WebApplication1.Models.ViewModels.MissionRSkillVM

@{ var title = "Create Mission R Skill"; }

<form method="post" enctype="multipart/form-data">
    @if (Model.Mission_Requieres_Skill.MissionID != 0)
    {
        title = "Edit Mission R Skill";
<input asp-for="Mission_Requieres_Skill.MissionID" hidden />}

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Mission_Requieres_Skill.SkillID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Mission_Requieres_Skill.SkillID" asp-items="@Model.SkillSelectList" class="form-control">
                            <option disabled selected>--Select SKill--</option>
                        </select>
                        <span asp-validation-for="Mission_Requieres_Skill.SkillID" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Mission_Requieres_Skill.MissionID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Mission_Requieres_Skill.MissionID" asp-items="@Model.MissionSelectList" class="form-control">
                            <option disabled selected>--Select Mission--</option>
                        </select>
                        <span asp-validation-for="Mission_Requieres_Skill.MissionID" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Mission_Requieres_Skill.RequieredPoint"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Mission_Requieres_Skill.RequieredPoint" class="form-control" />
                        <span asp-validation-for="Mission_Requieres_Skill.RequieredPoint" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Mission_Requieres_Skill.MissionID != 0)
                            {//Update
                <input type="submit" class="btn btn-info w-100" value="Update" /> }
            else
            {//Create
            <input type="submit" onclick="return validateinput()" class="btn btn-info w-100" value="Create" />}
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" />
    }

}