@model IEnumerable<WebApplication1.Models.Mission>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Mission List</h2>
        </div>
        <div class="col-5 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                Create New Mission
            </a>
        </div>
        <div class="col-1 text-right">
            <a asp-action="MissionRSkillIndex" class="btn btn-primary">
                Add RequiredSkill
            </a>
        </div>
    </div>


    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="background-color: white">
                <tr>
                    <th class="text-blue">
                        Mission Name
                    </th>
                    <th class="text-blue">
                        Mission Cost
                    </th>
                    <th class="text-blue">
                        Mission Reward
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr style="background-color: whitesmoke; 
                                opacity: 60%;">
                    <td width="50%" style="color: black;">@obj.Name</td>
                    <td width="30%" style="color: black;">@obj.Cost</td>
                    <td width="30%" style="color: black;">@obj.Reward</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.MissionID" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fas fa-edit">Edit</i>
                            </a>
                            <a asp-route-Id="@obj.MissionID" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Mission exists.</p>
    }
</div>