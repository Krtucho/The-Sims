@model WebApplication1.Models.ViewModels.NeighborhoodVM

@{ 
    var title = "Create Neighborhood";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Neighborhood.NeighborhoodID!= 0)
    {
        title = "Edit Neighborhood";
<input asp-for="Neighborhood.NeighborhoodID" hidden />
                }
    
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Neighborhood.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Neighborhood.Name" class="form-control" />
                        <span asp-validation-for="Neighborhood.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Neighborhood.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Neighborhood.Description" class="form-control" />
                        <span asp-validation-for="Neighborhood.Description" class="text-danger"></span>
                    </div>

                </div>
           
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Neighborhood.SkillID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Neighborhood.SkillID" asp-items="@Model.SkillSelectList" class="form-control">
                            <option disabled selected>--Select Skill--</option>
                        </select>
                        <span asp-validation-for="Neighborhood.SkillID" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Neighborhood.WorldID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Neighborhood.WorldID" asp-items="@Model.WorldSelectList" class="form-control">
                            <option disabled selected>--Select World--</option>
                        </select>
                        <span asp-validation-for="Neighborhood.WorldID" class="text-danger"></span>
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Neighborhood.NeighborhoodID != 0)
                            {//Update
                <input type="submit" class="btn btn-info w-100" value="Update" /> }
            else
            {//Create
            <input type="submit" onclick="return validateinput()" class="btn btn-info w-100" value="Create" />}
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }

}