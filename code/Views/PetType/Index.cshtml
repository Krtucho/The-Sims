@model IEnumerable<WebApplication1.Models.PetType>

    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">PetType List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    Create New PetType
                </a>
            </div>
        </div>


        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            PetType Name
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%" style="color: black;">@obj.PetTypeID</td>
  
                            <td class=" col-1 text-center">
                                <div class="w-75 btn-group" role="group">
                                    @*<a asp-route-Id="@obj.PetTypeID" asp-action="Upsert" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>*@
                                    <a asp-route-Id="@obj.PetTypeID" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="far fa-trash-alt">Delete</i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
    <p>No PetType exists.</p>
        }
    </div>
