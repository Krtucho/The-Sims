
@model WebApplication1.Models.ViewModels.SimSkillVM

@if (Model.SkillPoints.Count() == 0)
{
    <div class="alert alert-warning">
        <p>There is no skills on this Sim</p>
    </div>
    <a asp-action="Profile" asp-route-id="@Model.Sim.SimID" class="btn btn-primary">Back</a>
}
else
{
    <table class="table table-striped table-bordered table-sm">
        <thead style="background-color: white">
            <tr>

                <th>Skill</th>
                <th>Score</th>
            </tr>
        </thead>
        @foreach (var item in Model.SkillPoints)
        {
            <tr style="background-color: whitesmoke;
                                opacity: 60%;">
                <td style="color: black;">@item.Skill.Name</td>
                <td style="color: black;">@item.Points</td>
            </tr>
        }
    </table>
}

<div class="col">
    <a asp-route-Id="@Model.Sim.SimID" asp-action="Profile" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
</div>
