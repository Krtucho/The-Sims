@model IEnumerable<WebApplication1.Models.Pet>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Most Popular Pets</h2>
        </div>
        
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="background-color: white">
                <tr>
                    <th class="text-blue">
                        Neighborhood
                    </th>
                    <th class="text-blue">
                        Pet Type
                    </th>
                    <th class="text-blue">
                        Amount
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var obj in ViewBag.PetTypeAmount)
                {
                    <tr style="background-color: whitesmoke; 
                                opacity: 60%;">
                        <td width="50%" style="color: black;">@obj.Item1</td>
                        <td width="50%" style="color: black;">@obj.Item2</td>
                        <td width="50%" style="color: black;">@obj.Item3</td>
                        @*<td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-Id="@obj.PetID" asp-action="Upsert" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-route-Id="@obj.PetID" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pets in House</h2>
        </div>
        @*<div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    Create New Pet
                </a>
            </div>*@
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="background-color: white">
                <tr>
                    <th class="text-blue">
                        Pet Name
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr style="background-color: whitesmoke; 
                                opacity: 60%;">
                        <td width="50%" style="color: black;">@obj.Name</td>
                        @*<td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-Id="@obj.PetID" asp-action="Upsert" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-route-Id="@obj.PetID" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Pet in this House.</p>
    }
    <div class="form-group row">
        <div class="col">
            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
        </div>
    </div>
</div>
