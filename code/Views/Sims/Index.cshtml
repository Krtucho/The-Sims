@model IEnumerable<WebApplication1.Models.Sim>

    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Sims List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    Create New Sim
                </a>
            </div>
        </div>


        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead style="background-color: white">
                    <tr>
                        <th class="text-blue">
                            Sim Name
                        </th>
                        <th class="text-blue">
                            Sim Last Name
                        </th>
                        <th class="text-blue">
                            Balance
                        </th>
                        <th class="text-blue">
                            Neighborhood
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                    <tr style="background-color: whitesmoke; 
                                opacity: 60%;"
                        >
                        <td width="30%" style="color: black;"><a asp-route-Id="@obj.SimID" asp-action="Profile">@obj.Name</a></td>
                        <td width="30%" style="color:black;">@obj.LastName</td>
                        <td width="20%" style="color:black;">@obj.Balance</td>
                        <td width="20%" style="color:black;">@obj.HomeID</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.SimID" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit">Edit</i>
                                </a>
                                <a asp-route-Id="@obj.SimID" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt">Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Sim exists.</p>
        }
    </div>
